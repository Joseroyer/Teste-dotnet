
<div class="wrapper">
    <form class="form-signin">
        <h2 class="form-signin-heading">Login</h2>
        <div style=" margin-top: 5px;">
            <input type="text" class="form-control" id="user" name="user" placeholder="Usuário" required="" autofocus="" />
        </div>
        <div style=" margin-top: 5px;">
            <input type="password" class="form-control" name="senha" id="senha" placeholder="Senha" required="" />
        </div>
        <button id="btnLogar" class="btn btn-lg btn-primary btn-block" style="margin-top: 5px;" type="button">Login</button>
    </form>
</div>

@section scripts{
    <script>

        $("#btnLogar").click(function () {
            var usuario = {
                User: $('#user').val(),
                Senha: $('#senha').val()
            };
            //if(validarFormulario(usuario))
            logar(usuario);
        });

        function logar(usuario) {
            $.ajax({
                url: "@Url.Action("validarUser","Usuarios")",
                method: "POST",
                data: JSON.stringify(usuario),
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    //console.log(result);
                    if (result.mensagem)
                        alert("Sucesso");
                    else
                        alert("erro")
                }
            });
        }

        //function validarFormulario(usuario) {

        //}


    </script>
}